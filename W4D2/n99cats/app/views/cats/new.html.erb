<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/cats" method="post">

      <label for="name">Name</label>
      <input id='name' type="text", name="cat[name]">
      <br><br>
      M<input type="radio" name="cat[gender]" value="M" checked>
      F<input type="radio" name="cat[gender]" value="F">
      <br><br>

      <label for="color">color</label>
      <select id="color" name="cat[color]">
        <option disabled selected >--Please Select--</option>
        <option value="red">Red</option>
        <option value="blue">Blue</option>
        <option value="yellow">Yellow</option>
      </select>
      <br><br>
      <label for="birth_date">Birth Date</label>
      <input id='birth_date' type="date" name="cat[birth_date]">
      <br><br>
      <label>Description
        <textarea id= "description" name="cat[description]">
        </textarea>
      </label>
      <br><br>
      <input type="submit" value="Submit Cat">
  </form>
  </body>
</html>
